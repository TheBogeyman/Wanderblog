extends layout
block content
    - var title = 'Login'
    .container.signin-box
        form.form-signin(method='post')
            h2.form-signin-heading Please sign in
            label.sr-only(for='inputLogin') Login name
            input#inputLogin.form-control(name='login_name', type='login_name', placeholder='Login name', required='', autofocus='')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(name='password',type='password', placeholder='Password', required='')
            .checkbox
                label
                    input(type='checkbox', value='remember-me')
                    |  Remember me
            button.btn.btn-lg.btn-success.btn-block.signin-btn(type='submit') Sign in
            button.btn.btn-lg.btn-primary.btn-block.signin-btn(type='submit') Register
